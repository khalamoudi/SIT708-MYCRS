<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#fcfcfc"

    tools:context=".fragments.HistoryFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="History"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:lineHeight="23.4dp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif"

        android:textColor="@color/black"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/recommended_active_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        app:cardCornerRadius="22dp"
        android:layout_marginLeft="40dp"
        android:background="#E3E3E4"
        android:backgroundTint="#E3E3E4"
        android:layout_marginRight="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:cardCornerRadius="22dp"
                android:background="?colorPrimary"
                android:backgroundTint="?colorPrimary"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recommended"
                    android:textSize="18dp"
                    android:lineHeight="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/recommended_active_card_text"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:text="Deleted"
                android:textSize="18dp"
                android:lineHeight="20dp"
                android:gravity="center"
                android:textColor="#707070"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/delete_active_card"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        app:cardCornerRadius="22dp"
        android:layout_marginLeft="40dp"
        android:background="#E3E3E4"
        android:backgroundTint="#E3E3E4"
        android:layout_marginRight="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">


            <TextView
                android:id="@+id/delete_active_card_text"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:textStyle="bold"
                android:layout_height="match_parent"

                android:textSize="18dp"
                android:text="Recommended"
                android:lineHeight="20dp"
                android:gravity="center"
                android:textColor="#707070"
                />
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="22dp"
                android:background="?colorPrimary"
                android:backgroundTint="?colorPrimary"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Deleted"
                    android:textSize="18dp"
                    android:lineHeight="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcommended_courses_recyclerview"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/recommended_course_recyclerview"
        tools:itemCount="4"
        app:spanCount="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.75"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/deleted_courses_recyclerview"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/recommended_course_recyclerview"
        tools:itemCount="1"
        app:spanCount="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.75"
        />


</LinearLayout>