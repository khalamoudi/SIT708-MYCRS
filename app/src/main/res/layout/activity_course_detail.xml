<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".CourseDetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="10"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="0dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:lineHeight="23.4dp"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="Mobile development"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:padding="15.5dp"
            android:src="@drawable/options_icon_vertical"
            app:tint="@color/black" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"

        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"


        app:cardCornerRadius="16dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="2.25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:padding="10dp"
            android:background="@drawable/cyber_security_img">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.75"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|start"
                android:lineHeight="16.5dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Offerd by"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top|start"
                android:lineHeight="20.5dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Udemy"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>



        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="10"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:outlineProvider="none"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#4DFF9500"
            android:layout_height="match_parent">
            <TextView
                android:drawableTop="@drawable/star_png"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4.9"
                android:textSize="14dp"
                android:lineHeight="17.3dp"
                android:gravity="center"
                android:textColor="#FF9500"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:outlineProvider="none"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#4D007AFF"
            android:layout_height="match_parent">
            <TextView
                android:drawableTop="@drawable/global_png"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="visit"
                android:textSize="14dp"
                android:lineHeight="17.3dp"
                android:gravity="center"
                android:textColor="#007AFF"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:outlineProvider="none"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#4D34C759"
            android:layout_height="match_parent">
            <TextView
                android:drawableTop="@drawable/dollar_sign_png"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4.9"
                android:textSize="14dp"
                android:lineHeight="17.3dp"
                android:gravity="center"
                android:textColor="#34C759"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:outlineProvider="none"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#4D007AFF"
            android:layout_height="match_parent">
            <TextView
                android:drawableTop="@drawable/verified_png"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="certified"
                android:textSize="14dp"
                android:lineHeight="17.3dp"
                android:gravity="center"
                android:textColor="#007AFF"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <TextView
        android:background="@drawable/profile_background"
        android:layout_width="100dp"
        android:layout_marginLeft="20dp"
        android:layout_height="0dp"
        android:lineHeight="20.35dp"
        android:text="Details"
        android:textColor="?colorPrimary"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_weight="0.6"/>



    <TextView

        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp"
        android:text="Some details About course Content And what User will Be able to do after taking this course and what is the related fields to it"
        android:textColor="#AEAEB2"
        android:gravity="start|center_vertical"
        android:textSize="14dp"
        android:lineHeight="17dp"
        android:layout_weight="1"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <TextView
        android:background="@drawable/profile_background"
        android:layout_width="110dp"
        android:layout_marginLeft="20dp"
        android:layout_height="0dp"
        android:lineHeight="20.35dp"
        android:text="Feedback"
        android:textColor="?colorPrimary"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_weight="0.6"/>



    <TextView

        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp"
        android:text="Some details About course Content And what User will Be able to do after taking this course and what is the related fields to it"
        android:textColor="#AEAEB2"
        android:gravity="start|center_vertical"
        android:textSize="14dp"
        android:lineHeight="17dp"
        android:layout_weight="1"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <androidx.cardview.widget.CardView
        android:padding="5dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_weight="0.85"
        android:backgroundTint="?colorPrimary"
        android:layout_height="0dp">
        <TextView
            android:onClick="CourseAdding"
            android:padding="12dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_baseline_add_24"
            android:text="Add Course"
            />
    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>




</LinearLayout>